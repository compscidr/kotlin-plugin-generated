<idea-plugin url="https://github.com/fabianishere/kotlin-plugin-generated">
    <name>Kotlin Plugin Generated</name>
    <id>nl.fabianm.kotlin.plugin.generated</id>

    <description>
        <![CDATA[
        A Kotlin compiler plugin that annotates Kotlin-generated to signify to code analyzers that these methods have
        been generated by the compiler.
        ]]>
    </description>

    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>org.jetbrains.kotlin</depends>

    <vendor url="https://github.com/fabianishere" email="mail.fabianm@gmail.com" />

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <gradleProjectImportHandler implementation="nl.fabianm.kotlin.plugin.generated.idea.GeneratedGradleImportHandler" />
    </extensions>
</idea-plugin>
